@model UserLoginModel

<div class="container mt-2 text-center w-50">
    <h2>Вход на сайт</h2>
    <form class="mt-5" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="All"></div>
        <div>
            <div class="form-group">
                <div class="input-group mb-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Email</span>
                    </div>
                    <input asp-for="Email" type="text" class="form-control" id="email" aria-describedby="email">
                    <span asp-validation-for="Email" />
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="input-group mb-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Password</span>
                    </div>
                    <input asp-for="Password" type="text" class="form-control" id="pass" aria-describedby="pass">
                    <span asp-validation-for="Password" />
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Войти" class="btn btn-outline-dark" />
                <a asp-action="Register" class="btn btn-dark" asp-controller="Account">Регистрация</a>
            </div>
        </div>
    </form>
</div>