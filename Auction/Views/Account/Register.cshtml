@model UserRegisterModel

<div class="container mt-5 text-center">
    <h2>Регистрация</h2>
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="All"></div>

        <div class="mt-2">
            <input type="text" asp-for="Email" placeholder="Введите Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="mt-2">
            <input asp-for="Password" placeholder="Введите пароль"/>
            <span asp-validation-for="Password" />
        </div>
        <div class="mt-2">
            <input asp-for="ConfirmPassword" placeholder="Повторите пароль"/>
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <button type="submit" class="btn btn-dark mt-2">Регистрация</button>

    </form>
</div>